mixin store(name, title, time)
  article(class="stores__item store--" + `${name}`)
    a(class="stores__link" href="restraunt.html", rel="noopener noreferrer")
      div(class="stores__image store--" + `${name}` + "-image")
    h2(class="stores__heading") 
      a(class="stores__link" href="restraunt.html", rel="noopener noreferrer")=title
    div(class="restaurant__description")
      block
    p(class="restaurant__time")= time + ` мин`

mixin menu-item(title, cost, path)
  li(class="menu__row")
    div(class="menu__text-container")
      h3(class="menu__header")= title 
      block
      p(class="menu__cost")= cost
    picture(class="menu__image-container")
      img(class="menu__image" src="images/restaurant/"+`${path}` alt= title)